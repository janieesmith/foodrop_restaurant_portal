<!-- Validation failure messages -->
<% if @menu_item.errors.any? %>
  <% @menu_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Menu Item #<%= @menu_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_menu_item/<%= @menu_item.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <input type="text" id="restaurant_id" name="restaurant_id" placeholder="Restaurant" class="form-control" value="<%= @menu_item.restaurant_id %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @menu_item.photo %>">
      </div>

      <!-- Label and input for availability -->
      <div class="checkbox">
        <label for="availability">
          <input type="checkbox" id="availability" name="availability" value="1" <%= "checked" if @menu_item.availability %>>
          Availability
        </label>
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @menu_item.description %>">
      </div>

      <!-- Label and input for menu_item_name -->
      <div class="form-group">
        <label for="menu_item_name" class="control-label">
          Menu item name
        </label>

        <input type="text" id="menu_item_name" name="menu_item_name" placeholder="Menu item name" class="form-control" value="<%= @menu_item.menu_item_name %>">
      </div>

      <button class="btn btn-warning">
        Update Menu Item
      </button>
      or
      <a href="/menu_items/<%= @menu_item.id %>">Cancel</a>
    </form>
  </div>
</div>
